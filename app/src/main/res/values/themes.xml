<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
        <style name="Theme.Fury" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color(Widgets Color) -->
        <item name="colorPrimary">@color/theme_green</item>
        <item name="colorPrimaryVariant">@color/app_theme_secondary</item>
        <item name="colorOnPrimary">@color/full_white</item>
        <item name="colorAccent">@color/h2_dark</item>

        <!-- Secondary brand color(Texts Colors)-->
        <item name="colorSecondary">@color/theme_red</item>
        <item name="colorSecondaryVariant">@color/l4</item>
        <item name="colorOnSecondary">@color/full_white</item>


         <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/spartan_semibold</item>

    </style>

    <style name="textstyle1">
        <item name="android:textColor">@color/h1_dark</item>
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="textstyle2">
        <item name="android:textColor">@color/h1_dark</item>
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="textstylenumeric">
        <item name="android:textColor">@color/h1_dark</item>
        <item name="fontFamily">@font/work_sans_semibold</item>
    </style>

    <style name="textstylenumeric2">
        <item name="android:textColor">@color/h1_dark</item>
        <item name="fontFamily">@font/work_sans_medium</item>
    </style>

    <style name="maintxttitle">
        <item name="android:textColor">@color/h1_light</item>
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="maintxtamount">
        <item name="android:textColor">@color/h2_light</item>
        <item name="fontFamily">@font/work_sans_semibold</item>
    </style>

    <style name="linkcolor">
        <item name="android:textColor">@color/d3</item>
        <item name="fontFamily">@font/raleway</item>
    </style>

    <style name="boxtext">
        <item name="android:textColor">@color/theme_green</item>
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="overviewtxttitle">
        <item name="android:textColor">@color/theme_green</item>
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="overviewtxtamt">
        <item name="android:textColor">@color/l4</item>
        <item name="fontFamily">@font/work_sans_semibold</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

</resources>