<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fury" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color(Widgets Color) -->
        <item name="colorPrimary">@color/app_theme_secondary</item>
        <item name="colorPrimaryVariant">@color/app_theme_secondary</item>
        <item name="colorOnPrimary">@color/full_white</item>

        <!-- Secondary brand color(Texts Colors)-->
        <item name="colorSecondary">@color/l1</item>
        <item name="colorSecondaryVariant">@color/d2</item>
        <item name="colorOnSecondary">@color/full_white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

