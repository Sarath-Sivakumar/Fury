<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fury" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color(Widgets Color) -->
        <item name="colorPrimary">@color/theme_green</item>
        <item name="colorPrimaryVariant">@color/app_theme_secondary</item>
        <item name="colorOnPrimary">@color/full_white</item>
        <item name="colorPrimaryContainer">@color/d1</item>

        <!-- Secondary brand color(Texts Colors)-->
        <item name="colorSecondary">@color/h1_light</item>
        <item name="colorSecondaryVariant">@color/h1_dark</item>
        <item name="colorOnSecondary">@color/h2_dark</item>
        <item name="colorSecondaryContainer">@color/h2_light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Status_bar</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/raleway_semibold</item>

    </style>
</resources>