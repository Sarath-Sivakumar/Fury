<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_popupshade"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">
    <!--Button for date extension future update-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_popup"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="3dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/colored_icon_logout" />

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:fontFamily="@font/source_sans_pro_semibold"-->
<!--            android:text="Attention!"-->
<!--            android:textSize="24sp" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="Are you sure you want to logout?"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yes_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_borderonly"
                android:fontFamily="@font/raleway_bold"
                android:text="Yes"
                android:textAllCaps="false" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/no_btn"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_borderonly"
                android:fontFamily="@font/raleway_bold"
                android:text="No"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>