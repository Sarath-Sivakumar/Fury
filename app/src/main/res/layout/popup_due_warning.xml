<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_popupshade"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">
    <!--Button for date extension future update-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_popup"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="12dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/colored_icon_duewarning" />

        <TextView
            android:id="@+id/warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="Your due of (DUE_NAME) is nearing its pay date.."
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="2dp"
            android:background="@drawable/background_borderonly"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NameDue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="(DUE_NAME)"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/DateDue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:fontFamily="@font/work_sans_medium"
                    android:gravity="center"
                    android:text="(DUE_DATE)"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans_semibold"
                android:gravity="center"
                android:paddingStart="0dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text="(DUE_AMT)"
                android:textSize="24sp" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="Have you completed that payment?"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yes_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_borderonly"
                android:fontFamily="@font/raleway_bold"
                android:text="Yes"
                android:textAllCaps="false" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/no_btn"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_borderonly"
                android:fontFamily="@font/raleway_bold"
                android:text="No"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>