<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="3dp"
    android:minWidth="125dp"
    android:minHeight="63dp"
    android:orientation="vertical"
    android:background="@drawable/background_recyclersitems"
    android:backgroundTint="@color/app_theme_secondary"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/exp_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_marginStart="6dp"
            android:src="@drawable/frag_icon_home" />

        <TextView
            android:id="@+id/indicatorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/secular_one"
            android:gravity="center|end"
            android:singleLine="true"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_weight="0.4">

        <TextView
            android:id="@+id/exp_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:textColor="?attr/colorSecondary"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>