<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_popupshade"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">
    <!--Button for date extension future update-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_popup"
        android:orientation="vertical"
        android:padding="20dp">

<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="60dp"-->
<!--            android:padding="6dp"-->
<!--            android:contentDescription="@null"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:src="@drawable/colored_icon_warning" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="6dp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="Delete account?"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="6dp"
            android:fontFamily="@font/raleway_medium"
            android:text="@string/note_this_action_cannot_be_undone_nall_user_data_will_be_cleared"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="12dp"
            android:padding="6dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Type 'delete' to confirm"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/checkString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dlyes_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight=".5"
                android:background="@drawable/background_borderonly"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/cont"
                android:textAllCaps="false"
                tools:ignore="TextContrastCheck,VisualLintButtonSize" />

            <Button
                android:id="@+id/dlno_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight=".5"
                android:background="@drawable/background_borderonly"
                android:fontFamily="@font/raleway_bold"
                android:text="Cancel"
                android:textAllCaps="false"
                tools:ignore="TextContrastCheck,VisualLintButtonSize" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>