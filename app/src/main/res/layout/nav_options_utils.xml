<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/utilities"
            android:textSize="18sp" />

        <Button
            android:id="@+id/u_clearData"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/button_settings"
            android:drawableLeft="@drawable/common_icon_trash"
            android:gravity="start|center"
            android:text="@string/clear_all_data"
            android:textAllCaps="false"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded,TextContrastCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/dlt_user"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/button_settings"
            android:drawableLeft="@drawable/common_icon_account"
            android:gravity="start|center"
            android:text="@string/delete_account"
            android:textAllCaps="false"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded,TextContrastCheck,VisualLintButtonSize" />

    </LinearLayout>
</FrameLayout>