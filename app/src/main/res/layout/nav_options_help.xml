<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:layout_margin="12dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_support"
        android:layout_margin="12dp"
        android:textSize="18sp" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_settings"
        android:id="@+id/Contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_us"
        android:drawableLeft="@drawable/common_icon_contactus"
        android:gravity="start|center"
        android:textSize="14sp"
        android:layout_margin="6dp"/>

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_settings"
        android:id="@+id/faq"
        android:gravity="start|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/common_icon_faq"
        android:text="@string/faq"
        android:textSize="14sp"
        android:layout_margin="6dp"/>

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_settings"
        android:id="@+id/feedback"
        android:gravity="start|center"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/common_icon_bug"
        android:layout_height="wrap_content"
        android:text="@string/report_a_problem"
        android:textSize="14sp"
        android:layout_margin="6dp"/>

</LinearLayout>