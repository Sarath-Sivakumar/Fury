<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_bg_shader"
    android:padding="33dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="51dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_bg"
                android:backgroundTint="?attr/colorOnSecondary"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SetBudget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:fontFamily="@font/raleway_bold"
                        android:padding="12dp"
                        android:text="Set Budget"
                        android:textSize="24sp" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/expNameTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/expOptions"
                        style="@android:style/Widget.Material.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:dropDownWidth="match_parent"
                        android:entries="@array/ExpenseItems"
                        android:padding="12dp"
                        android:spinnerMode="dropdown"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/budget_Amt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Budget Amount"
                        android:inputType="text"
                        android:padding="12dp"
                        android:singleLine="true" />

                </FrameLayout>

                <TextView
                    android:id="@+id/radioTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Select salary type" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/add_yes"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/card_view_theme"
                        android:fontFamily="@font/raleway_bold"
                        android:text="Add"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/add_no"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/raleway_bold"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="?attr/colorSecondaryVariant" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>