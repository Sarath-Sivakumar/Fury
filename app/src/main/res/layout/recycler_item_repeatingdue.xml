<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="6dp"
    android:background="@drawable/background_borderonly"
    android:backgroundTint="@color/white"
    android:maxHeight="60dp"
    android:minHeight="?attr/actionBarSize"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight=".6"
        android:background="@drawable/background_borderonly"
        android:backgroundTint="@color/d2"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="0dp"
                android:backgroundTint="?attr/colorPrimaryVariant"
                app:cardCornerRadius="35dp"
                tools:ignore="TextSizeCheck">

                <TextView
                    android:id="@+id/icoText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:gravity="center"
                    android:text="@string/r"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="24sp" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="start"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/rent"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dAmt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/work_sans_bold"
                    android:gravity="end"
                    android:text="100000"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.21"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="end"
            android:singleLine="true"
            android:text="Repeats on"
            android:textColor="@color/h1_dark"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/finalDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_medium"
            android:gravity="end"
            android:text="31/12/2023"
            android:textColor="@color/h2_dark"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>
