<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="?attr/colorOnPrimary" />
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item android:right=".5dp" android:left=".5dp" android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#0F2027"
                android:centerColor="@color/app_theme_secondary"
                android:endColor="#141E30"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>