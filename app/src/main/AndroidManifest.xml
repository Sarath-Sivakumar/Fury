<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app.personal.fury">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fury"
        tools:targetApi="31">
        <activity
            android:name="app.personal.fury.FutureStatus_Prediction_Activity"
            android:exported="false" />
        <activity
            android:name="app.personal.fury.DueDebt_Activity"
            android:exported="false" />
        <activity
            android:name="app.personal.fury.Salary_Planner_Activity"
            android:exported="false" />
        <activity
            android:name="app.personal.fury.Expense_Tracker_Activity"
            android:exported="false" />
        <activity
            android:name="app.personal.fury.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>